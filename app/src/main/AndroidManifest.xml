<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission to draw over other apps -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- Needed for network requests -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Needed to observe network state changes (for ConnectivityManager callbacks) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Allow requesting battery optimization exemption -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <!-- Required on Android 11+ to query all installed packages -->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <!-- Foreground service permissions for screen capture (Android 14 requirement) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <!-- Optional on Android 13+ for notifications; app may request at runtime if needed -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" tools:targetApi="33" />
    
    <!-- Define a custom permission for secure broadcast communication -->
    <permission
        android:name="com.droidrun.portal.SEND_INPUT_DATA"
        android:protectionLevel="signature" />
    
    <!-- Use our custom permission -->
    <uses-permission android:name="com.droidrun.portal.SEND_INPUT_DATA" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Droidrun"
        tools:targetApi="31">


        <service
            android:name=".DroidrunAccessibilityService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <provider
            android:name=".DroidrunContentProvider"
            android:authorities="com.droidrun.portal"
            android:enabled="true"
            android:exported="true">
        </provider>

        <service
            android:name=".DroidrunKeyboardIME"
            android:label="@string/keyboard_name"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:exported="true">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- WebSocket demo page merged into MainActivity -->
        <activity android:name=".WsSettingsActivity" android:exported="true" />

        <!-- Foreground service to satisfy MediaProjection requirements on Android 14+ -->
        <service
            android:name=".ScreenCaptureService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />

    </application>

</manifest>