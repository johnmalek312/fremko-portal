<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/droidrun_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ws_url_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="WebSocket URL" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ws_provider_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Provider (optional)" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ws_model_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Model (optional)" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ws_steps_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Steps" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ws_timeout_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Timeout (ms)" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2A332F"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/ws_reasoning_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable reasoning" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/ws_reflection_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable reflection" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/ws_tracing_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable tracing" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/ws_debug_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable debug" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/ws_vision_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable vision" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ws_settings_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</ScrollView>